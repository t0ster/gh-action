{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@/styles/*": ["styles/*"]
    },
    "lib": ["dom", "es2017"],
    "exclude": ["node_modules"],
    "include": ["**/*.js", "**/*.css"]
  }
}
